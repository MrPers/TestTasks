@model Indentity.ViewModels.LoginVM

<h1>Sign In With</h1>

<form asp-controller="Auth" asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div>
        <label>UserName</label>
        <input asp-for="UserName" value="User" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" value="12qw!Q" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <button type="submit">Log in</button>
    </div>
</form>
<div>
    <a asp-controller="Auth" asp-action="Register"
       asp-route-returnUrl="@Model.ReturnUrl">Register</a>
</div>
<div>
    <a asp-controller="Auth" asp-action="Roles">Roles</a>
</div>